<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.haloriki.calculatorgahoel.MainActivity">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="SIMPLE CALCULATOR"
        android:textSize="12pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblTitle"
        android:layout_marginTop="31dp"
        android:text="DISPLAY" />

    <TextView
        android:id="@+id/txtCounting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/lblHead"
        android:text="0.0" />

    <LinearLayout
        android:id="@+id/lny_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCounting"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clearClicked"
            android:text="CLEAR" />

        <Button
            android:id="@+id/btnMRPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MR+" />

        <Button
            android:id="@+id/btnMRMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MR-" />

        <Button
            android:id="@+id/btnMR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MR" />
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="1dp"
        android:layout_below="@id/lny_up" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="4">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:text="1" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:text="2" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:text="3" />

            <Button
                android:id="@+id/btnFour"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:text="4" />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:text="5" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:text="6" />

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:text="7" />

            <Button
                android:id="@+id/btnEight"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:text="8" />

            <Button
                android:id="@+id/btnNine"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:text="9" />

            <Button
                android:id="@+id/btnComma"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:text="." />

            <Button
                android:id="@+id/btnZero"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:onClick="numericalClicked"
                android:layout_columnSpan="2"
                android:text="0" />


        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="28dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="4">

            <Button
                android:id="@+id/btnMin"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="operatorClicked"
                android:text="-" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="operatorClicked"
                android:text="+" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="/" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="60dp"
                android:onClick="operatorClicked"
                android:layout_height="wrap_content"
                android:text="*" />

            <Button
                android:id="@+id/btnPangkat"
                android:layout_width="60dp"
                android:onClick="operatorClicked"
                android:layout_height="wrap_content"
                android:text="X*Y" />

            <Button
                android:id="@+id/btnAkar"
                android:layout_width="60dp"
                android:onClick="operatorClicked"
                android:layout_height="wrap_content"
                android:text="^2" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="match_parent"
                android:layout_columnSpan="2"
                android:onClick="equalClicked"
                android:layout_height="wrap_content"
                android:text="=" />


        </GridLayout>

    </LinearLayout>


</RelativeLayout>
